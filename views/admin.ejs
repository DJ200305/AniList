    <style>
      a {
        text-decoration: none;
        color: #fff;
      }

      .container {
        max-width: 600px;
        height: 80vh;
        margin: 5vh auto;
        padding: 30px;
        border-radius: 4px;
        background-color: #151f2e;
        display: grid;
        grid-gap: 30px;
        grid-template-columns: repeat(2, 1fr);
        grid-template-rows: repeat(2, 1fr);
      }

      .add,
      .update,
      .delete,
      .logs {
        background-color: #0b1622;
        border-radius: 4px;
        display: flex;
        flex-direction: column;
        justify-content: center;
        padding: 20px;
        transition: transform 0.2s ease-in;
      }

      .add:hover,
      .update:hover,
      .delete:hover,
      .logs:hover {
        transform: scale(1.1);
      }

      .admin-btn {
        font-family: "Roboto";
        font-size: 11px;
        width: 50%;
        margin: 0px auto;
        background-color: #3db4f2;
        padding: 15px;
        margin-bottom: 20px;
        border-radius: 4px;
        transition: opacity 0.2s;
      }

      .admin-btn:hover {
        opacity: 0.7;
      }

      .admin-btn:active {
        opacity: 0.5;
      }
    </style>
